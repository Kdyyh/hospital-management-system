# === Secure defaults ===
ENV=prod
DEBUG=0
SECRET_KEY=please-change-this-to-a-strong-random-string
ALLOWED_HOSTS=your.domain.com

DB_NAME=hospitalback
DB_USER=dbuser
DB_PASSWORD=change-me
DB_HOST=db
